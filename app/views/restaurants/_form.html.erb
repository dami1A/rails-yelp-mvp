<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3">
    <%= simple_form_for restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address, placeholder: 'enter an address' %>
      <%= f.input :phone_number, placeholder: '01 23 45 67 89'  %>
      <%= f.input :category, placeholder: 'chinese, italian, japanese, french or belgian' , collection: Restaurant::CATEGORIES %>
      <%= f.submit class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

